@model IEnumerable<BarC.Models.Producto>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

@{
    var role = @ViewBag.role;
    if (role == 1)
    {
        Layout = "~/Views/Shared/_Menu.cshtml";
    }
    if (role == 2)
    {
        Layout = "~/Views/Shared/_MenuUsuario.cshtml";
    }
        ViewData["Title"] = "Index";

    }

    <h1 class="titulos">PRODUCTOS</h1>
    <div class="intermedios">

        <table class="table">
            <thead>
                <tr>
                    <th>
                    PRODUCTO
                    </th>
                    <th>
                    PRECIO
                    </th>
                    <th>
                    PEDIDO
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreProducto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pedido.IdNumero)
                        </td>
                        <td>
                            <a asp-action="Details" class="btn btn-outline-warning  btn-sm " asp-route-id="@item.Id">Detalle</a>
                            <a asp-action="Delete" class="btn btn-outline-danger btn-sm " asp-route-id="@item.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
    </div>