@model BarC.Models.Producto
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

@{
    var role = @ViewBag.role;
    if (role == 1)
    {
        Layout = "~/Views/Shared/_Menu.cshtml";
    }
    if (role == 2)
    {
        Layout = "~/Views/Shared/_MenuUsuario.cshtml";
    }


}



<h1 class="titulos">AGREGAR PRODUCTO</h2>

 
    <div class="form-alta">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NombreProducto" class="control-label"></label>
                    <input asp-for="NombreProducto" class="form-control" />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Precio" class="control-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pedido" class="control-label"></label>
                    <input asp-for="Pedidofk" value="@ViewBag.Pedidofk" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Agregar" class="btn btn-warning btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index"></a>
    </div>



