@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using Microsoft.AspNetCore.Http

@{
    var role = @ViewBag.role;
    if (role == 1)
    {
        Layout = "~/Views/Shared/_Menu.cshtml";
    }
    if (role == 2)
    {
        Layout = "~/Views/Shared/_MenuUsuario.cshtml";
    }
    ViewBag.Title = "Consultar Pedidos";
    Layout = "~/Views/Shared/_MenuUsuario.cshtml";

}


 <h1 class="titulos">Editar Pedido</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Precio
            </th>
            <th>
                Eliminar?
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in ViewBag.productdetail)
        {

            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.NombreProducto
                </td>
                <td>
                    @item.Precio
                </td>
                <td>
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

                </td>

            </tr>



        }
    </tbody>
</table>

<td>
    <a class="btn btn-warning btn-lg" asp-action="Create">Agregar</a>

</td>